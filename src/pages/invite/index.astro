---
import "../../styles/global.css";
import LayoutWithHero from "../../layouts/LayoutWithHero.astro";
import myImage from "../../assets/hero_page/hero_invites.webp";
import { getInvite } from "../../../Backend/backend.mjs";
import Card_jury from "../../components/Card_jury.astro";
const invite = await getInvite();
console.log(invite);

const title = "Invités";
const heroAlt = "Image Hero de la page invité";
---

<LayoutWithHero title={title} heroImage={myImage} heroAlt={heroAlt}>
  <div slot="chapo" class="grid">
    <p>
      Cette année, nous accueillons des athlètes, des réalisateurs et des
      experts en technologie pour partager leurs histoires et leur passion.
    </p>
  </div>
  <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
    {
      invite.length > 0 ? (
        invite.map((invite) => <Card_jury {...invite} />)
      ) : (
        <p>No houses to rent.</p>
      )
    }
  </div>
</LayoutWithHero>
