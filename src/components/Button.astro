---
export interface Props {
  variant?: "default" | "dark" | "outlined";
  size?: "small" | "medium" | "large";
  url?: string;
  text?: string;
}

const {
  variant = "default",
  size = "medium",
  url = "#",
  text = "",
} = Astro.props;

const variantClass = {
  default: "border-indigo-100 bg-white hover:bg-black hover:text-white",
  dark: "border border-indigo-500 bg-indigo-500 text-white hover:bg-indigo-600",
  outlined: "border-indigo-200 bg-red hover:bg-indigo-50",
};

const sizeClass = {
  small: "px-4 py-2.5 text-sm",
  medium: "px-6 py-3 text-base",
  large: "px-8 py-4 text-base",
};
---

<a
  href={url}
  class={`inline-flex items-center gap-2 text-black border-1 border-red-500 bg-white font-normal rounded-2xl transition duration-300 ease-in-out ${variantClass[variant]} ${sizeClass[size]}`}
>
  <slot />
  {text}
</a>
